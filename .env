# Geral
PORT=3000
CLIENT_URL=http://localhost:3000

# Autenticação JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90
JWT_COOKIE_EXPIRES_IN=30
COOKIE_DOMAIN=yourdomain.com
OAUTH_SUCCESS_REDIRECT=/dashboard
MOBILE_APP_SCHEME=yourapp
NODE_ENV=production
SESSION_SECRET=your_strong_session_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Email (Desenvolvimento com Mailtrap)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your-mailtrap-username
EMAIL_PASSWORD=your-mailtrap-password
EMAIL_FROM=hello@ecocosmetics.com
EMAIL_REPLY_TO=support@ecocosmetics.com

# Email (Produção com SendGrid)
SENDGRID_USERNAME=apikey
SENDGRID_PASSWORD=your-sendgrid-api-key

# Configuração DKIM (Produção)
DOMAIN=yourdomain.com
DKIM_PRIVATE_KEY=your-private-key
DKIM_SELECTOR=default

LOG_LEVEL=debug # can be error, warn, info, http, debug
LOG_MAX_SIZE=20m
LOG_MAX_FILES=30d
